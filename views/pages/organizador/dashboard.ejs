<div class="max-w-7xl mx-auto">
  <!-- Header da página -->
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-primary-800 mb-2">Dashboard do Organizador</h1>
    <p class="text-primary-600">Bem-vindo de volta, <%= user.nome_completo %>! Aqui está um resumo dos seus eventos.</p>
  </div>

  <!-- Cards de estatísticas -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
    <!-- Total de Eventos -->
    <div class="bg-white rounded-xl shadow-lg p-6 border border-primary-100 hover:shadow-xl transition-shadow duration-300">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-primary-600 text-sm font-medium">Total de Eventos</p>
          <p class="text-3xl font-bold text-primary-800"><%= estatisticas.totalEventos %></p>
        </div>
        <div class="bg-primary-100 p-3 rounded-lg">
          <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
        </div>
      </div>
    </div>

    <!-- Eventos Ativos -->
    <div class="bg-white rounded-xl shadow-lg p-6 border border-primary-100 hover:shadow-xl transition-shadow duration-300">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-primary-600 text-sm font-medium">Eventos Ativos</p>
          <p class="text-3xl font-bold text-primary-800"><%= estatisticas.eventosAtivos %></p>
        </div>
        <div class="bg-green-100 p-3 rounded-lg">
          <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
      </div>
    </div>

    <!-- Total de Vendas -->
    <div class="bg-white rounded-xl shadow-lg p-6 border border-primary-100 hover:shadow-xl transition-shadow duration-300">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-primary-600 text-sm font-medium">Total de Vendas</p>
          <p class="text-3xl font-bold text-primary-800">R$ <%= estatisticas.totalVendas.toLocaleString('pt-BR', {minimumFractionDigits: 2}) %></p>
        </div>
        <div class="bg-yellow-100 p-3 rounded-lg">
          <svg class="w-6 h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
          </svg>
        </div>
      </div>
    </div>

    <!-- Ingressos Vendidos -->
    <div class="bg-white rounded-xl shadow-lg p-6 border border-primary-100 hover:shadow-xl transition-shadow duration-300">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-primary-600 text-sm font-medium">Ingressos Vendidos</p>
          <p class="text-3xl font-bold text-primary-800"><%= estatisticas.totalIngressosVendidos %></p>
        </div>
        <div class="bg-blue-100 p-3 rounded-lg">
          <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z"></path>
          </svg>
        </div>
      </div>
    </div>
  </div>

  <!-- Ações rápidas -->
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-8">
    <!-- Criar Novo Evento -->
    <div class="bg-gradient-to-br from-primary-500 to-primary-600 rounded-xl shadow-lg p-6 text-white hover:shadow-xl transition-all duration-300 hover:scale-105">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-xl font-bold">Criar Evento</h3>
        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
        </svg>
      </div>
      <p class="text-primary-100 mb-4">Organize um novo evento e comece a vender ingressos</p>
      <a href="/organizador/eventos/criar" class="inline-block bg-white text-primary-600 px-4 py-2 rounded-lg font-medium hover:bg-primary-50 transition-colors duration-200">
        Criar Agora
      </a>
    </div>

    <!-- Gerenciar Eventos -->
    <div class="bg-white rounded-xl shadow-lg p-6 border border-primary-100 hover:shadow-xl transition-all duration-300 hover:scale-105">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-xl font-bold text-primary-800">Meus Eventos</h3>
        <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
        </svg>
      </div>
      <p class="text-primary-600 mb-4">Visualize e gerencie todos os seus eventos</p>
      <a href="/organizador/eventos" class="inline-block bg-primary-600 text-white px-4 py-2 rounded-lg font-medium hover:bg-primary-700 transition-colors duration-200">
        Ver Eventos
      </a>
    </div>

    <!-- Relatórios -->
    <div class="bg-white rounded-xl shadow-lg p-6 border border-primary-100 hover:shadow-xl transition-all duration-300 hover:scale-105">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-xl font-bold text-primary-800">Relatórios</h3>
        <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
        </svg>
      </div>
      <p class="text-primary-600 mb-4">Analise o desempenho dos seus eventos</p>
      <button class="bg-primary-600 text-white px-4 py-2 rounded-lg font-medium hover:bg-primary-700 transition-colors duration-200" onclick="alert('Funcionalidade em desenvolvimento')">
        Ver Relatórios
      </button>
    </div>
  </div>

  <!-- Eventos Recentes -->
  <div class="bg-white rounded-xl shadow-lg border border-primary-100">
    <div class="p-6 border-b border-primary-100">
      <div class="flex items-center justify-between">
        <h2 class="text-2xl font-bold text-primary-800">Eventos Recentes</h2>
        <a href="/organizador/eventos" class="text-primary-600 hover:text-primary-700 font-medium">Ver todos</a>
      </div>
    </div>
    
    <div class="p-6">
      <% if (eventos.length === 0) { %>
        <div class="text-center py-8">
          <svg class="w-16 h-16 text-primary-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
          <h3 class="text-lg font-medium text-primary-600 mb-2">Nenhum evento criado ainda</h3>
          <p class="text-primary-500 mb-4">Comece criando seu primeiro evento!</p>
          <a href="/organizador/eventos/criar" class="inline-block bg-primary-600 text-white px-6 py-2 rounded-lg font-medium hover:bg-primary-700 transition-colors duration-200">
            Criar Primeiro Evento
          </a>
        </div>
      <% } else { %>
        <div class="space-y-4">
          <% eventos.forEach(evento => { %>
            <div class="flex items-center justify-between p-4 border border-primary-100 rounded-lg hover:bg-primary-50 transition-colors duration-200">
              <div class="flex items-center space-x-4">
                <div class="w-16 h-16 bg-primary-100 rounded-lg flex items-center justify-center overflow-hidden">
                  <% if (evento.url_imagem_capa) { %>
                    <img src="<%= evento.url_imagem_capa %>" alt="<%= evento.nome_evento %>" class="w-full h-full object-cover">
                  <% } else { %>
                    <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                    </svg>
                  <% } %>
                </div>
                <div>
                  <h3 class="font-semibold text-primary-800"><%= evento.nome_evento %></h3>
                  <p class="text-primary-600 text-sm">
                    <%= new Date(evento.data_hora_inicio).toLocaleDateString('pt-BR') %> - <%= evento.local_evento %>
                  </p>
                </div>
              </div>
              <div class="flex items-center space-x-2">
                <a href="/organizador/eventos/<%= evento.id %>/editar" class="text-primary-600 hover:text-primary-700 p-2 rounded-lg hover:bg-primary-100 transition-colors duration-200">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                  </svg>
                </a>
                <a href="/organizador/eventos/<%= evento.id %>/ingressos" class="text-primary-600 hover:text-primary-700 p-2 rounded-lg hover:bg-primary-100 transition-colors duration-200">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z"></path>
                  </svg>
                </a>
              </div>
            </div>
          <% }); %>
        </div>
      <% } %>
    </div>
  </div>
</div>

