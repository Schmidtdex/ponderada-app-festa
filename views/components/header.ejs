<header class="bg-gradient-to-r from-primary-700 via-primary-600 to-primary-700 shadow-xl border-b border-primary-500/30">
  <nav class="container mx-auto px-4 py-4">
    <div class="flex items-center justify-between">
      <!-- Logo/Brand -->
      <div class="flex items-center space-x-3">
        <div class="w-30 h-11 rounded-xl flex items-center justify-center shadow-lg overflow-hidden">
          <img src="/logo/nightlylogo.png" alt="Logo Nightly" class="w-full h-full object-contain" />
        </div>
        <h1 class="text-2xl font-bold text-primary-50 tracking-tight"></h1>
      </div>

      <!-- Navigation Links -->
      <div class="hidden md:flex items-center space-x-6">
        <a href="/eventos" class="text-primary-100 hover:text-primary-50 font-medium transition-colors duration-200 hover:underline underline-offset-4">
          Eventos
        </a>
        <a href="/perfil" class="text-primary-100 hover:text-primary-50 font-medium transition-colors duration-200 hover:underline underline-offset-4">
          Perfil
        </a>
        <button onclick="logout()" class="bg-primary-50 text-primary-700 px-4 py-2 rounded-lg font-medium hover:bg-primary-100 transition-all duration-200 shadow-md hover:shadow-lg">
          Sair
        </button>
      </div>

      <!-- Mobile menu button -->
      <div class="md:hidden">
        <button class="text-primary-50 hover:text-primary-200 transition-colors duration-200">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>
  </nav>
</header>

<script>
  function logout() {
    localStorage.removeItem('token');
    localStorage.removeItem('usuarioInfo');
    window.location.href = '/login';
  }
</script>
