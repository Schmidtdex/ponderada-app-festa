<script>
document.addEventListener('DOMContentLoaded', function() {
  const filtroEvento = document.getElementById('filtro-evento');
  const filtroStatus = document.getElementById('filtro-status');
  const filtroPeriodo = document.getElementById('filtro-periodo');
  const limparFiltros = document.getElementById('limpar-filtros');
  const ingressosItems = document.querySelectorAll('.ingresso-item');

  // Função de filtro
  function aplicarFiltros() {
    const termoBusca = filtroEvento.value.toLowerCase();
    const statusSelecionado = filtroStatus.value;
    const periodoSelecionado = filtroPeriodo.value;

    ingressosItems.forEach(item => {
      const nomeEvento = item.querySelector('h3').textContent.toLowerCase();
      const status = item.dataset.status;
      
      let mostrar = true;

      // Filtro por nome
      if (termoBusca && !nomeEvento.includes(termoBusca)) {
        mostrar = false;
      }

      // Filtro por status
      if (statusSelecionado && status !== statusSelecionado) {
        mostrar = false;
      }

      // Filtro por período (implementação simplificada)
      if (periodoSelecionado) {
        // Lógica de filtro por período seria implementada aqui
      }

      item.style.display = mostrar ? 'block' : 'none';
    });
  }

  // Event listeners para filtros
  filtroEvento.addEventListener('input', aplicarFiltros);
  filtroStatus.addEventListener('change', aplicarFiltros);
  filtroPeriodo.addEventListener('change', aplicarFiltros);

  // Limpar filtros
  limparFiltros.addEventListener('click', function() {
    filtroEvento.value = '';
    filtroStatus.value = '';
    filtroPeriodo.value = '';
    aplicarFiltros();
  });
});

// Funções globais
function mostrarQRCode(codigo) {
  document.getElementById('codigo-ingresso').textContent = codigo;
  document.getElementById('modal-qrcode').classList.remove('hidden');
}

function fecharModalQRCode() {
  document.getElementById('modal-qrcode').classList.add('hidden');
}

function salvarQRCode() {
  alert('Funcionalidade de salvar QR Code será implementada em breve!');
}

function baixarIngresso(codigo) {
  alert(`Baixando ingresso ${codigo}...`);
  // Implementar download do PDF do ingresso
}

function compartilharIngresso(codigo) {
  if (navigator.share) {
    navigator.share({
      title: 'Meu Ingresso',
      text: `Confira meu ingresso para o evento! Código: ${codigo}`,
      url: window.location.href
    });
  } else {
    // Fallback para navegadores que não suportam Web Share API
    const url = window.location.href;
    const texto = `Confira meu ingresso para o evento! Código: ${codigo} - ${url}`;
    
    if (navigator.clipboard) {
      navigator.clipboard.writeText(texto).then(() => {
        alert('Link copiado para a área de transferência!');
      });
    } else {
      alert('Compartilhamento não suportado neste navegador.');
    }
  }
}

