<div class="max-w-4xl mx-auto">
  <!-- Header da página -->
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-primary-800 mb-2">Meu Perfil</h1>
    <p class="text-primary-600">Gerencie suas informações pessoais e preferências.</p>
  </div>

  <!-- Mensagem de resultado -->
  <div id="mensagem-resultado" class="hidden mb-6"></div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <!-- Informações pessoais -->
    <div class="lg:col-span-2 space-y-6">
      <!-- Dados básicos -->
      <div class="bg-white rounded-xl shadow-lg border border-primary-100">
        <div class="p-6 border-b border-primary-100">
          <h2 class="text-xl font-semibold text-primary-800">Informações Pessoais</h2>
        </div>
        
        <form id="form-perfil" class="p-6 space-y-4">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <label for="nome_completo" class="block text-sm font-medium text-primary-700 mb-2">Nome Completo *</label>
              <input 
                type="text" 
                id="nome_completo" 
                name="nome_completo" 
                required
                value="<%= user.nome_completo %>"
                class="w-full px-4 py-2 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
              >
            </div>
            
            <div>
              <label for="email" class="block text-sm font-medium text-primary-700 mb-2">Email *</label>
              <input 
                type="email" 
                id="email" 
                name="email" 
                required
                value="<%= user.email %>"
                class="w-full px-4 py-2 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
              >
            </div>
            
            <div>
              <label for="telefone" class="block text-sm font-medium text-primary-700 mb-2">Telefone</label>
              <input 
                type="tel" 
                id="telefone" 
                name="telefone"
                placeholder="(11) 99999-9999"
                class="w-full px-4 py-2 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
              >
            </div>
            
            <div>
              <label for="data_nascimento" class="block text-sm font-medium text-primary-700 mb-2">Data de Nascimento</label>
              <input 
                type="date" 
                id="data_nascimento" 
                name="data_nascimento"
                class="w-full px-4 py-2 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
              >
            </div>
          </div>
          
          <div class="flex items-center justify-end pt-4">
            <button 
              type="submit" 
              class="px-6 py-2 bg-primary-600 text-white rounded-lg font-medium hover:bg-primary-700 transition-colors duration-200"
            >
              Salvar Alterações
            </button>
          </div>
        </form>
      </div>

      <!-- Preferências -->
      <div class="bg-white rounded-xl shadow-lg border border-primary-100">
        <div class="p-6 border-b border-primary-100">
          <h2 class="text-xl font-semibold text-primary-800">Preferências</h2>
        </div>
        
        <div class="p-6 space-y-4">
          <div>
            <label class="block text-sm font-medium text-primary-700 mb-3">Notificações por Email</label>
            <div class="space-y-2">
              <label class="flex items-center">
                <input type="checkbox" checked class="text-primary-600 focus:ring-primary-500 rounded">
                <span class="ml-2 text-primary-700">Novos eventos na minha região</span>
              </label>
              <label class="flex items-center">
                <input type="checkbox" checked class="text-primary-600 focus:ring-primary-500 rounded">
                <span class="ml-2 text-primary-700">Lembretes de eventos que comprei ingressos</span>
              </label>
              <label class="flex items-center">
                <input type="checkbox" class="text-primary-600 focus:ring-primary-500 rounded">
                <span class="ml-2 text-primary-700">Promoções e ofertas especiais</span>
              </label>
            </div>
          </div>
          
          <div>
            <label for="generos_favoritos" class="block text-sm font-medium text-primary-700 mb-2">Gêneros Musicais Favoritos</label>
            <select 
              id="generos_favoritos" 
              multiple
              class="w-full px-4 py-2 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
            >
              <option value="eletronica">Eletrônica</option>
              <option value="rock">Rock</option>
              <option value="pop">Pop</option>
              <option value="sertanejo">Sertanejo</option>
              <option value="funk">Funk</option>
              <option value="rap">Rap/Hip-Hop</option>
              <option value="reggae">Reggae</option>
              <option value="jazz">Jazz</option>
            </select>
            <p class="text-sm text-primary-500 mt-1">Segure Ctrl (ou Cmd) para selecionar múltiplos gêneros</p>
          </div>
          
          <div class="flex items-center justify-end pt-4">
            <button 
              type="button" 
              onclick="salvarPreferencias()"
              class="px-6 py-2 bg-primary-600 text-white rounded-lg font-medium hover:bg-primary-700 transition-colors duration-200"
            >
              Salvar Preferências
            </button>
          </div>
        </div>
      </div>

      <!-- Segurança -->
      <div class="bg-white rounded-xl shadow-lg border border-primary-100">
        <div class="p-6 border-b border-primary-100">
          <h2 class="text-xl font-semibold text-primary-800">Segurança</h2>
        </div>
        
        <div class="p-6 space-y-4">
          <div>
            <h3 class="text-lg font-medium text-primary-800 mb-2">Alterar Senha</h3>
            <form id="form-senha" class="space-y-4">
              <div>
                <label for="senha_atual" class="block text-sm font-medium text-primary-700 mb-2">Senha Atual</label>
                <input 
                  type="password" 
                  id="senha_atual" 
                  name="senha_atual"
                  class="w-full px-4 py-2 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
                >
              </div>
              
              <div>
                <label for="nova_senha" class="block text-sm font-medium text-primary-700 mb-2">Nova Senha</label>
                <input 
                  type="password" 
                  id="nova_senha" 
                  name="nova_senha"
                  class="w-full px-4 py-2 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
                >
              </div>
              
              <div>
                <label for="confirmar_senha" class="block text-sm font-medium text-primary-700 mb-2">Confirmar Nova Senha</label>
                <input 
                  type="password" 
                  id="confirmar_senha" 
                  name="confirmar_senha"
                  class="w-full px-4 py-2 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
                >
              </div>
              
              <div class="flex items-center justify-end">
                <button 
                  type="submit" 
                  class="px-6 py-2 bg-primary-600 text-white rounded-lg font-medium hover:bg-primary-700 transition-colors duration-200"
                >
                  Alterar Senha
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>

    <!-- Sidebar -->
    <div class="space-y-6">
      <!-- Resumo da conta -->
      <div class="bg-white rounded-xl shadow-lg border border-primary-100 p-6">
        <h3 class="text-lg font-semibold text-primary-800 mb-4">Resumo da Conta</h3>
        
        <div class="space-y-4">
          <div class="flex items-center justify-between">
            <span class="text-primary-600">Membro desde:</span>
            <span class="text-primary-800 font-medium">
              <%= new Date(user.data_criacao || Date.now()).toLocaleDateString('pt-BR', { month: 'long', year: 'numeric' }) %>
            </span>
          </div>
          
          <div class="flex items-center justify-between">
            <span class="text-primary-600">Eventos participados:</span>
            <span class="text-primary-800 font-medium">3</span>
          </div>
          
          <div class="flex items-center justify-between">
            <span class="text-primary-600">Ingressos comprados:</span>
            <span class="text-primary-800 font-medium">5</span>
          </div>
          
          <div class="flex items-center justify-between">
            <span class="text-primary-600">Total gasto:</span>
            <span class="text-primary-800 font-medium">R$ 380,00</span>
          </div>
        </div>
      </div>

      <!-- Histórico recente -->
      <div class="bg-white rounded-xl shadow-lg border border-primary-100 p-6">
        <h3 class="text-lg font-semibold text-primary-800 mb-4">Atividade Recente</h3>
        
        <div class="space-y-3">
          <div class="flex items-start space-x-3">
            <div class="w-2 h-2 bg-green-500 rounded-full mt-2 flex-shrink-0"></div>
            <div class="text-sm">
              <p class="text-primary-800 font-medium">Ingresso usado</p>
              <p class="text-primary-600">Show de Rock Nacional</p>
              <p class="text-primary-500 text-xs">20 de Outubro</p>
            </div>
          </div>
          
          <div class="flex items-start space-x-3">
            <div class="w-2 h-2 bg-blue-500 rounded-full mt-2 flex-shrink-0"></div>
            <div class="text-sm">
              <p class="text-primary-800 font-medium">Ingresso comprado</p>
              <p class="text-primary-600">Festival de Música Eletrônica</p>
              <p class="text-primary-500 text-xs">10 de Novembro</p>
            </div>
          </div>
          
          <div class="flex items-start space-x-3">
            <div class="w-2 h-2 bg-purple-500 rounded-full mt-2 flex-shrink-0"></div>
            <div class="text-sm">
              <p class="text-primary-800 font-medium">Perfil atualizado</p>
              <p class="text-primary-600">Informações pessoais</p>
              <p class="text-primary-500 text-xs">5 de Novembro</p>
            </div>
          </div>
        </div>
        
        <div class="mt-4 pt-4 border-t border-primary-100">
          <a href="/cliente/ingressos" class="text-primary-600 hover:text-primary-700 text-sm font-medium">
            Ver todos os ingressos →
          </a>
        </div>
      </div>

      <!-- Ações rápidas -->
      <div class="bg-white rounded-xl shadow-lg border border-primary-100 p-6">
        <h3 class="text-lg font-semibold text-primary-800 mb-4">Ações Rápidas</h3>
        
        <div class="space-y-3">
          <a 
            href="/eventos" 
            class="block w-full text-center bg-primary-600 text-white py-2 px-4 rounded-lg font-medium hover:bg-primary-700 transition-colors duration-200"
          >
            Explorar Eventos
          </a>
          
          <a 
            href="/cliente/ingressos" 
            class="block w-full text-center border border-primary-300 text-primary-700 py-2 px-4 rounded-lg font-medium hover:bg-primary-50 transition-colors duration-200"
          >
            Meus Ingressos
          </a>
          
          <button 
            onclick="exportarDados()"
            class="block w-full text-center border border-primary-300 text-primary-700 py-2 px-4 rounded-lg font-medium hover:bg-primary-50 transition-colors duration-200"
          >
            Exportar Dados
          </button>
        </div>
      </div>

      <!-- Zona de perigo -->
      <div class="bg-red-50 rounded-xl border border-red-200 p-6">
        <h3 class="text-lg font-semibold text-red-800 mb-2">Zona de Perigo</h3>
        <p class="text-red-600 text-sm mb-4">Estas ações são irreversíveis.</p>
        
        <button 
          onclick="confirmarExclusaoConta()"
          class="w-full bg-red-600 text-white py-2 px-4 rounded-lg font-medium hover:bg-red-700 transition-colors duration-200"
        >
          Excluir Conta
        </button>
      </div>
    </div>
  </div>
</div>

<!-- Modal de confirmação de exclusão -->
<div id="modal-exclusao-conta" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
  <div class="bg-white rounded-xl p-6 max-w-md w-full mx-4">
    <h3 class="text-lg font-semibold text-red-800 mb-4">Confirmar Exclusão da Conta</h3>
    <p class="text-primary-600 mb-6">
      Tem certeza que deseja excluir sua conta? Esta ação é irreversível e todos os seus dados serão perdidos permanentemente.
    </p>
    <div class="flex items-center justify-end space-x-4">
      <button onclick="fecharModalExclusao()" class="px-4 py-2 text-primary-600 hover:text-primary-700">
        Cancelar
      </button>
      <button id="confirmar-exclusao-conta" class="px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700">
        Excluir Definitivamente
      </button>
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const formPerfil = document.getElementById('form-perfil');
  const formSenha = document.getElementById('form-senha');
  const mensagemResultado = document.getElementById('mensagem-resultado');

  // Atualizar perfil
  formPerfil.addEventListener('submit', async function(e) {
    e.preventDefault();
    
    const formData = new FormData(this);
    const dados = Object.fromEntries(formData.entries());

    try {
      const response = await fetch('/cliente/perfil', {
        method: 'PUT',
        headers: {
          'Content-Type': 'application/json',
          'Authorization': `Bearer ${localStorage.getItem('token')}`
        },
        body: JSON.stringify(dados)
      });

      const resultado = await response.json();

      if (response.ok) {
        mostrarMensagem(resultado.message || 'Perfil atualizado com sucesso!', 'success');
      } else {
        mostrarMensagem(resultado.error || 'Erro ao atualizar perfil', 'error');
      }
    } catch (error) {
      console.error('Erro:', error);
      mostrarMensagem('Erro de conexão. Tente novamente.', 'error');
    }
  });

  // Alterar senha
  formSenha.addEventListener('submit', async function(e) {
    e.preventDefault();
    
    const senhaAtual = document.getElementById('senha_atual').value;
    const novaSenha = document.getElementById('nova_senha').value;
    const confirmarSenha = document.getElementById('confirmar_senha').value;

    if (novaSenha !== confirmarSenha) {
      mostrarMensagem('As senhas não coincidem', 'error');
      return;
    }

    if (novaSenha.length < 6) {
      mostrarMensagem('A nova senha deve ter pelo menos 6 caracteres', 'error');
      return;
    }

    try {
      const response = await fetch('/cliente/alterar-senha', {
        method: 'PUT',
        headers: {
          'Content-Type': 'application/json',
          'Authorization': `Bearer ${localStorage.getItem('token')}`
        },
        body: JSON.stringify({
          senha_atual: senhaAtual,
          nova_senha: novaSenha
        })
      });

      const resultado = await response.json();

      if (response.ok) {
        mostrarMensagem('Senha alterada com sucesso!', 'success');
        this.reset();
      } else {
        mostrarMensagem(resultado.error || 'Erro ao alterar senha', 'error');
      }
    } catch (error) {
      console.error('Erro:', error);
      mostrarMensagem('Erro de conexão. Tente novamente.', 'error');
    }
  });

  function mostrarMensagem(texto, tipo) {
    mensagemResultado.textContent = texto;
    mensagemResultado.className = `mb-6 p-4 rounded-lg ${
      tipo === 'success' 
        ? 'bg-green-100 border border-green-400 text-green-700' 
        : 'bg-red-100 border border-red-400 text-red-700'
    }`;
    mensagemResultado.classList.remove('hidden');
    
    setTimeout(() => {
      mensagemResultado.classList.add('hidden');
    }, 5000);
  }

  // Tornar função disponível globalmente
  window.mostrarMensagem = mostrarMensagem;

  // Máscara para telefone
  document.getElementById('telefone').addEventListener('input', function(e) {
    let value = e.target.value.replace(/\D/g, '');
    value = value.replace(/(\d{2})(\d)/, '($1) $2');
    value = value.replace(/(\d{5})(\d)/, '$1-$2');
    e.target.value = value;
  });
});

// Funções globais
function salvarPreferencias() {
  mostrarMensagem('Preferências salvas com sucesso!', 'success');
}

function exportarDados() {
  alert('Funcionalidade de exportação será implementada em breve!');
}

function confirmarExclusaoConta() {
  document.getElementById('modal-exclusao-conta').classList.remove('hidden');
}

function fecharModalExclusao() {
  document.getElementById('modal-exclusao-conta').classList.add('hidden');
}

document.getElementById('confirmar-exclusao-conta').addEventListener('click', async function() {
  try {
    const response = await fetch('/cliente/excluir-conta', {
      method: 'DELETE',
      headers: {
        'Authorization': `Bearer ${localStorage.getItem('token')}`
      }
    });

    if (response.ok) {
      alert('Conta excluída com sucesso. Você será redirecionado.');
      localStorage.removeItem('token');
      localStorage.removeItem('usuarioInfo');
      window.location.href = '/';
    } else {
      const resultado = await response.json();
      mostrarMensagem(resultado.error || 'Erro ao excluir conta', 'error');
    }
  } catch (error) {
    console.error('Erro:', error);
    mostrarMensagem('Erro de conexão. Tente novamente.', 'error');
  }

  fecharModalExclusao();
});
</script>

